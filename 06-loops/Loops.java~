public class Loops {
    public String frontTimes(String str, int n) {
	String result = new String();
	if (str.length()<=3){
	    String front = str;
	    while (n > 0) {
		result = result + front;
		n=n-1;
	    }
	} else {
	    String front = str.substring(0,3);
	    while (n > 0) {
		result = result + front;
		n=n-1;
	    }
	}
	return result;
    }
}
